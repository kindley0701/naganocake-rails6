
<div class="container">
  <div class="m-10 row">
    <h2 class="bg-light col-4">管理者ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row">
      <div class="col-1"></div>
      <p class="col-3">メールアドレス</p><br />
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-1"></div>
      <p class="col-3">パスワード</p><br />
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field row">
        <div class="col-1"></div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions row">
      <div>
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>

    </div>
  <% end %>

  <%= render "admin/shared/links" %>

</div>
