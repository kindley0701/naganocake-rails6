<div class="container">
  <div class="row title">
    <h5 class="col-3 bg-light">ジャンル一覧・追加</h5>
  </div>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="genre-new row">
    <p class="col-2">ジャンル名</p>
    <div class="col-3">
      <%= f.text_field :name %>
    </div>
    <div class="col-2">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>
  <table class="table">
    <thead class="table-light">
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>