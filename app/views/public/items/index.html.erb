<div class="container">
  <div class="row">
    <%= render 'genre_search', genres: @genres %>
    <div class="col-9 title">
      <div>
        <h5 class="bg-light">商品一覧</h5>
        <p>（全<%= @items.count %>件）</p>
      </div>
      <div class="items">
        <% @items.each do |item| %>
          <div class="item">
            <%= link_to item_path(item.id), class: 'text-dark' do %>
              <div class="image">
                <%= image_tag item.get_image(150,150) %>
              </div>
              <div class="field">
                <p>商品名　　</p>
                <div><%= item.name %></div>
              </div>
            <% end %>
            <div class="field">
              <p>￥</p>
              <div><%= item.price %></div>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>