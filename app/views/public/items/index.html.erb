<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'genre_search', genres: @genres %>
    </div>
    <div class="col-8 offset-1">
      <div>
        <h5 class="bg-light"><%= @genre %>一覧</h5>
        <p>（全<%= @items.count %>件）</p>
      </div>
      <div class="items">
        <% @items.each do |item| %>
          <div class="item">
            <%= link_to item_path(item.id), class: 'text-dark' do %>
              <div class="image">
                <%= image_tag item.get_image(150,150) %>
              </div>
              <div>
                <p>商品名</p>
                <div><%= item.name %></div>
              </div>
            <% end %>
            <div class="field">
              <p>￥</p>
              <div><%= item.price %></div>
              <% if item.is_active == false %>
                <p class="text-danger">　販売停止中</p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>