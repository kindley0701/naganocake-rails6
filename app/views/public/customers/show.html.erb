<div class="container">
  <div class="row title">
    <h2 class="bg-light col-3">マイページ</h2>
  </div>

  <div class="row info">
    <h5 class="col-2 info">登録情報</h5>
    <div>
      <%= link_to '編集する', edit_customer_path, class: 'btn btn-success' %>
    </div>
    <div class="col-2"></div>
    <div class="col-4">
      <%= link_to 'パスワードを変更', root_path, class: 'btn btn-success' %> <!--リンク先未実装-->
    </div>
  </div>
  <table class="table table-bordered">
    <tbody>
      <tr>
        <td>氏名</td>
        <td>
          <%= @customer.last_name %>
          <%= @customer.first_name %>
        </td>
      </tr>
      <tr>
        <td>カナ</td>
        <td>
          <%= @customer.last %>
          <%= @customer.first %>
        </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.zip %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.tel %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
  <div class="row info">
    <h5 class="col-2 info">配送先</h5>
    <div>
      <%= link_to "一覧を見る", root_path, class: 'btn btn-primary' %><!--リンク先未実装-->
    </div>
  </div>
  <div class="row info">
    <h5 class="col-2 info">注文履歴</h5>
    <div>
      <%= link_to "一覧を見る", root_path, class: 'btn btn-primary' %><!--リンク先未実装-->
    </div>
  </div>

</div>
