<div class="container">
  <div class="row title">
    <h5 class="col-3 bg-light">配送先編集</h5>
  </div>
  <%= render 'public/shared/error_messages', resource: @address %>
  <div>
    <%= form_with model: @address do |f| %>
      <div class="row">
        <p class="col-3">郵便番号(ハイフンなし)</p>
        <div class="col-3"><%= f.text_field :zip %></div>
      </div>
      <div class="row">
        <p class="col-3">住所</p>
        <div class="col-3"><%= f.text_field :address %></div>
      </div>
      <div class="row">
        <p class="col-3">宛名</p>
        <div class="col-3"><%= f.text_field :name %></div>
        <div class="col-3 button"><%= f.submit "変更内容を保存", class: 'btn btn-success' %></div>
      </div>
    <% end %>
  </div>
</div>